<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:textAlignment="center"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCardAddFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:layout_marginTop="4sp"
        android:layout_marginBottom="4sp"
        android:gravity="center"
        app:cardCornerRadius="10sp"
        android:background="@color/white"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/llCardAddFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/white"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:src="@drawable/ic_error_send_file"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:layout_marginStart="4sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="230sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="120sp"
                android:layout_marginEnd="120sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvNameFile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Error al enviar documento"
                    android:textColor="@color/error_red_lib"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvErrorDocument"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="Documento_Patria_Protestad_documentos de alta "
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_marginTop="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvNameFile"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivReload"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/ic_reload"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:layout_marginEnd="40sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cvCardFileImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:background="@color/grey_dark"
        android:gravity="center"
        app:cardCornerRadius="10sp"
        android:orientation="horizontal"
        android:layout_marginTop="4sp"
        android:layout_marginBottom="4sp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/llCardFileImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">


            <androidx.cardview.widget.CardView
                android:id="@+id/ivImageDocument"
                android:layout_width="60sp"
                android:layout_height="68sp"
                app:cardCornerRadius="10sp"
                app:cardElevation="0sp"
                android:layout_marginTop="15sp"
                android:layout_marginStart="30sp"
                android:layout_marginBottom="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/white">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llImageDocument"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivImageFile"
                        android:layout_width="60sp"
                        android:layout_height="68sp"
                        android:background="@color/boxes_transparent"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:visibility="gone" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="230sp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="120sp"
                android:layout_marginEnd="120sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvNameDocumentChargue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_marginEnd="15sp"
                    android:layout_marginBottom="14sp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Documento enviado con éxito"
                    android:textColor="@color/main_green_stroke_color"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/addNewDocument"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:fontFamily="@font/roboto_light"
                    android:text="Identificación oficial"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:visibility="visible"/>
            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivCheck"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/ic_check_successful"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_marginEnd="40sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCardFileChargue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:background="@color/gris_linea"
        android:gravity="center"
        app:cardCornerRadius="10sp"
        android:orientation="horizontal"
        android:layout_marginTop="4sp"
        android:layout_marginBottom="4sp">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/tvLoadChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shimmer_auto_start="true"
            android:layout_gravity="center">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/llCardFileChargue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:visibility="visible"
                android:background="@color/white">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ivImageDocumentToSend"
                    android:layout_width="60sp"
                    android:layout_height="68sp"
                    app:cardCornerRadius="10sp"
                    app:cardElevation="0sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginStart="30sp"
                    android:layout_marginBottom="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@color/white">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llImageDocumentToSend"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivImageFileToSend"
                            android:layout_width="60sp"
                            android:layout_height="68sp"
                            android:src="@drawable/ic_jpg_default"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="230sp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="120sp"
                    android:layout_marginEnd="120sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvEnviandoDocumento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15sp"
                        android:layout_marginEnd="15sp"
                        android:layout_marginBottom="14sp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Enviando documento"
                        android:textColor="@color/blue_color"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvNameDocumentToSend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20sp"
                        android:fontFamily="@font/roboto_light"
                        android:text="Identificación oficial"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:visibility="visible"/>


                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivSendDocument"
                    android:layout_width="68sp"
                    android:layout_height="68sp"
                    android:background="@drawable/ic_send_file"
                    android:tint="@color/blue_color"
                    android:adjustViewBounds="true"
                    android:layout_marginEnd="40sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>

    </androidx.cardview.widget.CardView>



</androidx.appcompat.widget.LinearLayoutCompat>




